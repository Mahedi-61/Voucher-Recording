<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mahediapps.voucherrecording">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity android:name="com.mahediapps.voucherrecording.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.mahediapps.voucherrecording.CreateAccount" />
        <activity android:name="com.mahediapps.voucherrecording.MainActivity" />
        <activity android:name="com.mahediapps.voucherrecording.ViewIncomeActivity" />
        <activity android:name="com.mahediapps.voucherrecording.ViewExpenseActivity" />
        <activity android:name="com.mahediapps.voucherrecording.AddIncomeActivity" />
        <activity android:name="com.mahediapps.voucherrecording.AddExpenseActivity" />
        <activity android:name="com.mahediapps.voucherrecording.EditExpenseActivity" />
        <activity android:name="com.mahediapps.voucherrecording.ClassifiedExpenseActivity" />
        <activity android:name="com.mahediapps.voucherrecording.EachVoucherCategory" />

    </application>

</manifest>
